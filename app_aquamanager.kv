#: kivy 2.1.0
## ------------------------------------------------------------------
## - Font settings in general. All used fonts to be defined here    -
## ------------------------------------------------------------------
#:set fn_title "./fonts/Ubuntu-B.ttf"
#:set fs_title 20

#:set fn_subtitle "./fonts/Ubuntu-B.ttf"
#:set fs_subtitle 16

#:set fn_subsubtitle "./fonts/Ubuntu-B.ttf"
#:set fs_subsubtitle 14

#:set fn_button "./fonts/Ubuntu-BI.ttf"
#:set fs_button 14

#:set fn_text "./fonts/Ubuntu-C.ttf"
#:set fs_text 12

#:set fn_data "./fonts/Ubuntu-LI.ttf"
#:set fs_data 12

## ------------------------------------------------------------------
## - Filelinks to be used globally:                                 -
## ------------------------------------------------------------------

#:set default_image1 "./images/MinimalArt-CitySTRWP.jpg"
#:set default_image2 "./images/RenderArt-PaperWallSTRWP.jpg"
#:set default_image3 "./images/RenderArt-TunelSTRWP.jpg"
#:set background_image "./images/RenderArt-StoneWallSTRWP.jpg"
#:set defaultQR "./qrcodes/_QR_default.png"
#:set phimage_link "./icons/caution.png"

## ----------------------------------------------------------------------------------------------
## transitions imported for screenchanges:
## ----------------------------------------------------------------------------------------------
#:import NoTransition kivy.uix.screenmanager.NoTransition
## -----------------------------------------------------------------------------
#:import CardTransition kivy.uix.screenmanager.CardTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import SwapTransition kivy.uix.screenmanager.SwapTransition
#:import WipeTransition kivy.uix.screenmanager.WipeTransition

## ----------------------------------------------------------------------------------------------
## Root Widget definition: ScreenManager                            ScreenManager       START   -
## ----------------------------------------------------------------------------------------------
AppObjScreenManager:
    id: ThisIsYourROOTWidget
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
            ## source: background_image
    ScreenStatus:
        id: screen_status
    ScreenControl:
        id: screen_conrol
    ScreenSettings:
        id: screen_settings

<AppObjScreenManager@ScreenManager>:
    ## transition: NoTransition()
    ## transition: CardTransition(direction="right", duration=0.1)
    ## transition: FadeTransition(duration=0.3)  # elegant fade
    ## transition: FallOutTransition(duration=0.05)    # opposites v
    ## transition: RiseInTransition(duration=0.08)     # opposites ^
    transition: SlideTransition()
    ## transition: SwapTransition(duration=.5)
    ## transition: WipeTransition(duration=1)

## ----------------------------------------------------------------------------------------------
## Root Widget definition: ScreenManager                            ScreenManager       ENDED   -
## ----------------------------------------------------------------------------------------------

<ScreenStatus@Screen>:
    name: "screen_status"
    InScreenWindow:
        NavBar:
            id: navbar
            size_hint: 1, 0.1                   ##  0.1     < 0.20
        TitleLine:
            id: screen_status_titleline
            size_hint: 1, 0.1                   ##  0.1
            display_title: "Status"
        OpAreaStatus:
            size_hint: 1, 0.75                  ##  0.75    < 0.95
            id: oparea_status
        Ribbon:
            id: ribbon_status
            size_hint: 1, 0.05                  ##  0.05    < 1
            text_ribbon: "by Sziller"
            image_source: phimage_link

<ScreenSettings@Screen>:
    name: "screen_settings"
    InScreenWindow:
        NavBar:
            id: navbar
            size_hint: 1, 0.1                   ##  0.1     < 0.20
        TitleLine:
            id: screen_settings_titleline
            size_hint: 1, 0.1                   ##  0.1
            display_title: "Settings"
        OpAreaSettings:
            size_hint: 1, 0.75                  ##  0.75    < 0.95
            id: oparea_settings
        Ribbon:
            id: ribbon_settings
            size_hint: 1, 0.05                  ##  0.05    < 1
            text_ribbon: "by Sziller"
            image_source: phimage_link

<ScreenControl@Screen>:
    name: "screen_control"
    InScreenWindow:
        NavBar:
            id: navbar
            size_hint: 1, 0.1                      ##  0.1      < 0.20
        TitleLine:
            id: screen_control_titleline
            size_hint: 1, 0.1                      ##  0.1
            display_title: "Control"
        OpAreaControl:
            size_hint: 1, 0.75                     ##  0.75     < 0.95
            id: oparea_control
        Ribbon:
            id: ribbon_control
            size_hint: 1, 0.05
            text_ribbon: "by Sziller"
            image_source: phimage_link

<InScreenWindow@BoxLayout>:
    orientation: "vertical"

<OperationAreaBox@BoxLayout>:
    orientation: "vertical"

<TitleLine@BoxLayout>:
    display_title: "default"
    orientation: "horizontal"
    ScreenTitleLabel:
        font_name: fn_title
        font_size: fs_title
        text: root.display_title

<OpAreaStatus@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 0.1
            LabelInfoKey:
                id: labelkey_update
                text: "Auto update in: __ secs"
            ButtonVal:
                text: "update"
                on_release: root.on_release_update(self)

        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'System operational:'
            LabelInfoVal:
                id: labelval_system
                text: 'N/A'
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'Last water circulation:'
            LabelInfoVal:
                id: labelval_waterstream
                text: 'N/A'
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'Last feeding:'
            LabelInfoVal:
                id: labelval_feeding
                text: 'N/A'
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'Last time shades were lowered:'
            LabelInfoVal:
                id: labelval_shade_down
                text: 'N/A'
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'Last time shades were raised:'
            LabelInfoVal:
                id: labelval_shade_up
                text: 'N/A'
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'Light group 01:'
            LabelInfoVal:
                id: labelval_light1
                text: 'N/A'
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'Light group 02:'
            LabelInfoVal:
                id: labelval_light2
                text: 'N/A'
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'Air circulation:'
            LabelInfoVal:
                id: labelval_circulation
                text: 'N/A'
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            LabelInfoKey:
                text: 'Ventillation:'
            LabelInfoVal:
                id: labelval_ventillation
                text: 'N/A'

<OpAreaControl@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"
            ## AsyncImage:
            ##     id: qr_plot_layout
            ##     size_hint: 1, 1
            ##     source: default_image1

<OpAreaSettings@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"

<NavBar@BoxLayout>:
    id: navbar
    orientation: "horizontal"
    size_hint: 1, 0.05
    ButtonScreenNav:
        id: button_nav_status
        target: "screen_status"
        disabled: True
        text: "Status"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_settings
        target: "screen_settings"
        disabled: False
        text: "Settings"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_control
        target: "screen_control"
        disabled: False
        text: "Control"
        on_release: root.on_release_navbar(self)

<Ribbon@BoxLayout>:
    text_ribbon: "by Sziller"
    image_source: None
    orientation: "horizontal"
    LabelRibbon:
        text: root.text_ribbon
    AsyncImage:
        keep_ratio: True
        allow_stretch: False
        size_hint: 0.05, 1
        source: root.image_source

#   ---------------------------------------------------------------------
#   - Label:                                                    START   -
#   ---------------------------------------------------------------------

<ScreenTitleLabel@Label>:
    font_size: fs_title
    font_name: fn_title

<LabelInfo@Label>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    color: 1, 1, 1, 1
    font_size: fs_subsubtitle
    font_name: fn_subsubtitle
    text_size: self.size


<LabelInfoKey@LabelInfo>:
    padding: (20, 2)
    size_hint: 0.6, 1
    halign: 'left'  ## center, right, left
    valign: 'center'  ## middle, top, bottom

<LabelInfoVal@LabelInfo>:
    padding: (20, 2)
    size_hint: 0.4, 1
    halign: 'right'  ## center, right, left
    valign: 'center'  ## middle, top, bottom

<LabelRibbon@Label>:
    halign: 'right'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom
    font_name: fn_button
    font_size: fs_button
    size_hint: 0.95, 1
    text_size: self.size
    padding: (10, 0)

<LabelPH@Label>:

#   ---------------------------------------------------------------------
#   - Label:                                                    ENDED   -
#   ---------------------------------------------------------------------


#   ---------------------------------------------------------------------
#   - TextInput:                                                START   -
#   ---------------------------------------------------------------------

<TextInParagraph@TextInput>:
    font_name: fn_data
    font_size: fs_data
    text_size: self.size
    line_height: 40
    focus: True
    hint_text: "enter project name"
    padding: (2, 2)
    foreground_color: (1,1,1,1)
    background_color: (1,1,1,0.2)
    cursor_color: (1,1,1,1)
    halign: 'left'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom

#   ---------------------------------------------------------------------
#   - TextInput:                                                ENDED   -
#   ---------------------------------------------------------------------

#   ---------------------------------------------------------------------
#   - Button:                                                   START   -
#   ---------------------------------------------------------------------

<ButtonScreenNav@Button>:
    font_name: fn_button
    font_size: fs_button
    background_color: 0.3, 0.4, 0.3, 0.45
    target: ""
    text_size: self.size
    color: (1, 1, 1)
    padding: (2, 2)
    text: "ToggleButton"
    halign: 'center'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom

<ButtonVal@Button>:
    size_hint: 0.4, 1
    font_name: fn_button
    font_size: fs_button
    background_color: 0.3, 0.4, 0.3, 0.45
    target: ""
    text_size: self.size
    color: (1, 1, 1)
    padding: (2, 2)
    text: "ToggleButton"
    halign: 'center'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom


#   ---------------------------------------------------------------------
#   - Button:                                                   ENDED   -
#   ---------------------------------------------------------------------